@model ET.Usuario
@{
    Layout = null;
}

@using (Html.BeginForm("AddOrEdit", "Usuario", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
{
    @Html.HiddenFor(model => model.IdUsuario)
    <div class="form-group">
        @Html.LabelFor(model => model.NroDocumento, new { @class = "control-label" })
        @Html.EditorFor(model => model.NroDocumento, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.NroDocumento)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.UserName, new { @class = "control-label" })
        @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.UserName)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Oficina, new { @class = "control-label" })
        @Html.EditorFor(model => model.Oficina, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Password, new { @class = "control-label" })
        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
    </div>
       <div class="form-group">
        @Html.LabelFor(model => model.Rol, new { @class = "control-label" })
        @Html.EditorFor(model => model.Rol, new { htmlAttributes = new { @class = "form-control" } })
    </div>


    <div class="form-group">
        @Html.LabelFor(model => model.FechaCreacion, new { @class = "control-label" })
        @Html.EditorFor(model => model.FechaCreacion, new { htmlAttributes = new { @class = "form-control" } })
    </div>



    <div class="form-group">
        
        @Html.LabelFor(model => model.Estado, new { @class = "control-label" })
        <div class="input-group">
            <span class="input-group-addon">$</span>
            @Html.EditorFor(model => model.Estado, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    
    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-primary"  />
        <input type="reset" value="Reset" class="btn" />
    </div>
}