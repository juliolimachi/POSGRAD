@model ET.ConceptoPago
@{
    Layout = null;
}

@using (Html.BeginForm("AddOrEdit", "ConceptoPago", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
{
    @Html.HiddenFor(model => model.IdConceptoPago)
    <div class="form-group">
        @Html.LabelFor(model => model.NroConcepto, new { @class = "control-label" })
        @Html.EditorFor(model => model.NroConcepto, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.NroConcepto)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Descripcion, new { @class = "control-label" })
        @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Descripcion)
    </div>


    <div class="form-group">
        
        @Html.LabelFor(model => model.Estado, new { @class = "control-label" })
        <div class="input-group">
            <span class="input-group-addon">$</span>
            @Html.EditorFor(model => model.Estado, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    
    <div class="form-group">
        <input type="submit" value="Guardar" class="btn btn-primary"  />
        <input type="reset" value="Reset" class="btn" />
    </div>
}