@model ET.CursoPosgrado
@{
    Layout = null;
}

@using (Html.BeginForm("AddOrEdit", "CursoPosgrado", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
{
    @Html.HiddenFor(model => model.IdCursoPosgrado)
    <div class="form-group">
        @Html.LabelFor(model => model.NombreCursoPosgrado, new { @class = "control-label" })
