@model ET.Pago
@{
    Layout = null;
}

@using (Html.BeginForm("AddOrEdit", "Pago", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
{
    @Html.HiddenFor(model => model.IdPago)

   <div class="form-group">

        @Html.LabelFor(model => model.Alumno.IdAlumno, "Alumno", new { @class = "control-label " })
        @Html.DropDownList("IdAlumno", (IEnumerable<SelectListItem>)ViewBag.alumnos, null, new { @class = "form-control" })

    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.NroRecibo, new { @class = "control-label" })
        @Html.EditorFor(model => model.NroRecibo, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.NroRecibo)
    </div>


    <div class="form-group">
        @Html.LabelFor(model => model.ControlCuota.cursoPosgrado.IdCursoPosgrado, "Curso", new { @class = "control-label " })
        @Html.DropDownList("IdCursoPosgrado", (IEnumerable<SelectListItem>)ViewBag.listacursos, null, new { @class = "form-control" })

    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.ControlCuota.IdControlCuota, "Matricula", new { @class = "control-label" })
        @Html.DropDownList("IdControlCuota", (IEnumerable<SelectListItem>)ViewBag.controlCuota, null, new { @class = "form-control" })


    </div>





    <div class="form-group">
        @Html.LabelFor(model => model.Monto, new { @class = "control-label" })
        @Html.EditorFor(model => model.Monto, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Monto)
    </div>




    <div class="form-group">
        <input type="submit" value="Guardar" class="btn btn-primary" />
        <input type="reset" value="Reset" class="btn" />
    </div>
}