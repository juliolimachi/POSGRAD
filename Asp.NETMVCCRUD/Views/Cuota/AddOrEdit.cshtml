@model ET.Cuota
@{
    Layout = null;
}

@using (Html.BeginForm("AddOrEdit", "Cuota", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
{
    @Html.HiddenFor(model => model.IdCuota)
    <div class="form-group">
        @Html.LabelFor(model => model.NroCuota, new { @class = "control-label" })
        @Html.EditorFor(model => model.NroCuota, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.NroCuota)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Descripcion, new { @class = "control-label" })
        @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Descripcion)
    </div>




    <div class="form-group">
        <input type="submit" value="Guardar" class="btn btn-primary" />
        <input type="reset" value="Reset" class="btn" />
    </div>
}